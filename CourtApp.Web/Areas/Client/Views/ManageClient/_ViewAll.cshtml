@model IEnumerable<GClientViewModel>
<table id="brandTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Sno.</th>
            <th>Name</th>
            <th>Father Name</th>
            <th>Mobile</th>
            <th>Email</th>
            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Clients.Delete)).Result.Succeeded ||
            (AuthorizationService.AuthorizeAsync(User, Permissions.Clients.Edit)).Result.Succeeded)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var bt in Model)
        {
            <tr>
                <td>
                    @(count = count + 1)
                </td>
                <td>
                    @(String.Concat(bt.FirstName,bt.MiddleName,bt.LastName))
                </td>
                <td>
                    @bt.FatherName
                </td>
                <td>
                    @bt.Mobile
                </td>
                <td>
                    @bt.Email
                </td>

                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Clients.Delete)).Result.Succeeded ||
               (AuthorizationService.AuthorizeAsync(User, Permissions.Clients.Edit)).Result.Succeeded)
                {
                    <td text-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu shadow animated--grow-in">
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Clients.Edit)).Result.Succeeded)
                                {
                                    <a asp-area="Client" asp-controller="ManageClient" asp-action="CreateOrUpdate" asp-route-id="@bt.UId">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>

                                }
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Clients.Delete)).Result.Succeeded)
                                {
                                    <form id="form_delete_@bt.UId" asp-area="Client" asp-controller="manageclient" method="post"
                                          asp-action="OnPostDelete" asp-route-id="@bt.UId" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@bt.UId').submit();" class="dropdown-item">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </form>
                                }
                            </div>
                        </div>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#brandTable").DataTable();
    });
</script>