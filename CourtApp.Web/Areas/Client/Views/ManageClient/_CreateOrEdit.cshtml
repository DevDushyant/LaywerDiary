                        <span asp-validation-for="FeeDetail.FeeSettled" class="text-danger"></span>
                    </div>
                    <label class="col-md-2 col-form-label">Advance Fee (<span style="color:red">*</span>)</label>
                    <div class="col-md-4">
                        <input type="text" placeholder="Please enter advance if any" asp-for="FeeDetail.FeeAdvance" class="form-control" />
