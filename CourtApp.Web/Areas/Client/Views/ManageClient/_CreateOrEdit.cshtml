@{
    ViewData["Title"] = localizer["Add New Client Information"];
    ViewData["Caption"] = localizer["Manage Client"];
    ViewData["Note"] = localizer["All (*) marked fields are mandatory!"];
}

<style>
    .div_hide {
        display: none
    }

    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
        width: 100% !important;
    }

    legend.scheduler-border {
        font-size: 1.2em !important;
        font-weight: bold !important;
        text-align: left !important;
        width: auto;
        padding: 0 10px;
        border-bottom: none;
    }
</style>
@model ClientViewModel
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="create-form" method="post" asp-controller="ManageClient"
      asp-action="OnPostCreateOrEdit"
      asp-route-id="@Model.Id"
      onsubmit="return jQueryModalPost(this);"
      enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.CaseId" />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Name"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <input type="text" placeholder="Please enter name" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Mobile"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <input type="tel" placeholder="Please enter mobile"
                           asp-for="Mobile" class="form-control" maxlength="10" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Email"] @* (<span style="color:red">*</span>) *@</label>
                <div class="col-md-4">
                    <input type="email" placeholder="Please enter email" asp-for="Email" class="form-control" />
                    @* <span asp-validation-for="Email" class="text-danger"></span> *@
                </div>
                <label class="col-md-2 col-form-label">Office Email</label>
                <div class="col-md-4">
                    <input type="email" maxlength="10" placeholder="Please enter office email" asp-for="OfficeEmail" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Referal By"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <input type="text" placeholder="Please referals name"
                           asp-for="ReferalBy" class="form-control" />
                    <span asp-validation-for="ReferalBy" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Appearance"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <select class="form-control select2bs4" asp-for="AppearenceID"
                            asp-items="@Model.Appearences">
                        <option></option>
                    </select>
                    <span asp-validation-for="AppearenceID" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    @* <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Opposite Counsel"]</label>
                <div class="col-md-4">
                    <select class="form-control select2bs4" asp-for="OppositCounselId" asp-items="@Model.OppositCounsels">
                        <option></option>
                    </select>
                </div>
            </div>
        </div>
    </div> *@
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Address"] (<span style="color:red">*</span>)</label>
                <div class="col-md-10">
                    <textarea type="text"
                              placeholder="Please enter the client complete address"
                              asp-for="Address" class="form-control"> </textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

