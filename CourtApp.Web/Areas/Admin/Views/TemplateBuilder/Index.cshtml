@{
    ViewData["Title"] = localizer["Darfting Templates"];
    ViewData["Caption"] = localizer["Templates"];
}
<div class="card">
    <div class="col-sm-12" style="padding:20px">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.CaseDrafting.Create)).Result.Succeeded)
        {
           @*  <a onclick="jQueryModalGet('/Litigation/TemplateBuilder/OnGetCreateOrEdit','Add Template Detail')" class="btn bg-success">
        <i class="fa fa-plus-square"></i> Add Template
        </a> *@
            <a asp-area="admin" asp-controller="TemplateBuilder" asp-action="OnGetCreateOrEdit" class="btn bg-success">
                <i class="fa fa-plus-square"></i> Add Template
            </a>
        }

        <a id="reload" class="btn btn-primary text-white">
            <i class="fa fas fa-bolt"></i>
            Reload
        </a>
    </div>
    <div id="viewAll" class="card-body table-responsive">
    </div>
</div>
@section Scripts
{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#tblTemplateInfo").DataTable();
            loadData();
            $('#reload').on('click', function () {
                loadData();
            });
        });
        function loadData() {
            $('#viewAll').load('/admin/TemplateBuilder/LoadAll');
        }
    </script>
}