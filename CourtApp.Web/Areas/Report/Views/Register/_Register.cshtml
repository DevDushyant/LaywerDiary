  @model CaseRegisterViewModel
<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="Hearing" method="post" asp-action="UpdateCaseDate" class="d-inline">
            <div class="row">
                <div class="col-md-12">
                    <table id="tblRegister" class="table table-striped" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sno.</th>
                                <th>Court.</th>
                                <th>Case Type</th>
                                <th>Case No.</th>
                                <th>Year</th>
                                <th>Title</th>
                                <th>Remark</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.registerDetails.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].Id" />
                                        @(i + 1)
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].Court" />
                                        @Model.registerDetails[i].Court
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].CaseType" />
                                        @Model.registerDetails[i].CaseType
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].CaseNo" />
                                        @Model.registerDetails[i].CaseNo
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].Year" />
                                        @Model.registerDetails[i].Year
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].Title" />
                                        @Model.registerDetails[i].Title
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.registerDetails[i].Remark" />
                                        @Model.registerDetails[i].Remark
                                    </td>
                                    <td>
                                        <a onclick="jQueryModalGet('/Litigation/casemanage/OnGetCaseHistory?CaseId=@Model.registerDetails[i].Id', 'See History')" class="fa fa-history"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#tblRegister").DataTable(
            {
                "language": {
                    "emptyTable": "Record is not there!"
                }
            }
        );
    });
</script>
