@model CaseHistoryViewModel
<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="Hearing" method="post" asp-action="UpdateCaseDate" class="d-inline">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Court"]</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                @localizer[Model.Court]
                            </div>                            
                        </div>
                        <label class="col-md-2 col-form-label">@localizer["Case No/Year"]</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                @localizer[Model.CaseNoYear]
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Case Title"]</label>
                        <div class="col-md-10">
                            <div class="input-group">
                                @localizer[Model.Title]
                            </div>
                        </div>                       
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <table id="tblCaseHistory" class="table table-striped" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sno.</th>
                                <th>Proceeding/Working Date</th>
                                <th>Stage</th>
                                <th>Proceeding/Work Done</th>
                            </tr>
                        </thead>
                        <tbody>                           
                            @for (int i = 0; i < Model.History.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        @(i + 1)
                                    </td>
                                    <td>
                                        @Model.History[i].Date
                                    </td>
                                    <td>
                                        @Model.History[i].Stage
                                    </td>
                                    <td>
                                        @Model.History[i].Activity
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>           
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#tblCaseHistory").DataTable(
            {
                "language": {
                    "emptyTable": "There is no history available for the selected case!"
                }
            }
        );
    });
</script>
