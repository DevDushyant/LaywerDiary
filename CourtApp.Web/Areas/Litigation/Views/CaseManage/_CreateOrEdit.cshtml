@{
    ViewData["Title"] = localizer["Add New Case"];
    ViewData["Caption"] = localizer["Manage Case"];
    ViewData["Note"] = localizer["All (*) marked fields are mandatory!"];
}
<style>
    .div_hide {
        display: none
    }

    .highCourt {
        display: none;
    }

    .Court {
        display: none;
    }

</style>
@model CaseViewModel
<div class="card">
    <div class="col-sm-12" style="padding:20px">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="create-form" method="post" asp-controller="CaseManage" asp-action="OnPostCreateOrEdit" asp-route-Id="@Model.Id" enctype="multipart/form-data">
            <input type="hidden" value="@Model.Id" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Institution Date"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="date" asp-for="InstitutionDate" name="InstitutionDate" id="InstitutionDate" value="@DateTime.Now.ToString("MM/dd/yyyy")" class="form-control">
                            </div>
                            <span asp-validation-for="InstitutionDate" class="text-danger"></span>
                        </div>
                        <label class="col-md-2 col-form-label">@localizer["State"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <select class="form-control select2bs4" id="StateId" asp-for="StateId" asp-items="@Model.States">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="StateId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Court Type"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <select class="form-control select2bs4" id="CourtTypeId" asp-for="CourtTypeId"
                                        asp-items="@Model.CourtTypes" onchange="CourtTypeChange(this)">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="CourtTypeId" class="text-danger"></span>
                        </div>
                        <label class="col-md-2 col-form-label highCourt">@localizer["Bench"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4 highCourt">
                            <div class="input-group">
                                <select class="form-control select2bs4" id="BenchId" asp-for="BenchId" asp-items="@Model.Courts">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <label class="col-md-2 col-form-label Court">@localizer["Court District"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4 Court">
                            <div class="input-group">
                                <select class="form-control select2bs4" id="CourtDistrictId" asp-for="CourtDistrictId" asp-items="@Model.CourtDistricts">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="CourtDistrictId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row highCourt">
                        <div class="form-group row ">
                            <label class="col-md-2 col-form-label">@localizer["Strength"]</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <select class="form-control select2bs4" id="StrengthId" asp-for="StrengthId" asp-items="@Model.Strengths">
                                        <option></option>
                                    </select>
                                </div>
                                <span asp-validation-for="StrengthId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row Court">
                        <div class="form-group row ">
                            <label class="col-md-2 col-form-label">@localizer["Court Complex"] (<span style="color:red">*</span>)</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <select class="form-control select2bs4" id="ComplexBenchId" asp-for="ComplexBenchId" asp-items="@Model.ComplexBenchs">
                                        <option></option>
                                    </select>
                                </div>
                                <span asp-validation-for="ComplexBenchId" class="text-danger"></span>
                            </div>
                            <label class="col-md-2 col-form-label">@localizer["Court"] (<span style="color:red">*</span>)</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <select class="form-control select2bs4" id="CourtId" asp-for="CourtId" asp-items="@Model.Courts">
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Case Category"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <select class="form-control select2bs4" id="CaseCategoryId" asp-for="CaseCategoryId" asp-items="@Model.CaseNatures">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="CaseCategoryId" class="text-danger"></span>
                        </div>
                        <label class="col-md-2 col-form-label">@localizer["Case Type"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <select name="CaseTypeId" class="form-control select2bs4" id="CaseTypeId" asp-for="CaseTypeId" asp-items="@Model.TypeOfCases">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="CaseTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label"> Title First (<span style="color:red">*</span>)</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" placeholder="First title" asp-for="FirstTitle" name="FirstTitle" id="TitleFirst" class="form-control" />
                            </div>
                            <span asp-validation-for="FirstTitle" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group">
                                <select name="FirstTitleCode" class="form-control select2bs4" id="FirstTitleCode" asp-for="FirstTitleCode" asp-items="@Model.FirstTitleList">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="FirstTitleCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12" style="margin-left:50%"><strong>VS</strong></div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Title Second (<span style="color:red">*</span>)</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" placeholder="Second title" asp-for="SecondTitle" name="SecondTitle" id="TitleSecond" class="form-control" />
                            </div>
                            <span asp-validation-for="SecondTitle" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group">
                                <select name="SecoundTitleCode" class="form-control select2bs4" id="SecoundTitleCode" asp-for="SecoundTitleCode" asp-items="@Model.SecondTitleList">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="SecoundTitleCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Case Stage"] (<span style="color:red">*</span>)</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <select class="form-control select2bs4" asp-for="CaseStageCode" asp-items="@Model.CaseStatusList">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="CaseStageCode" class="text-danger"></span>
                        </div>
                        <label class="col-md-2 col-form-label">@localizer["Case No/Year"]</label>
                        <div class="col-md-2">
                            <div class="input-group">
                                <input type="text" placeholder="Case Number" asp-for="CaseNo" name="CaseNo" id="CaseNo" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group">
                                <select name="CaseYear" class="form-control select2bs4" id="CaseYear" asp-for="CaseYear" asp-items="@Model.Years">
                                    <option></option>
                                </select>
                            </div>
                            <span asp-validation-for="CaseYear" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Cis No/Year"]</label>
                        <div class="col-md-2">
                            <div class="input-group">
                                <input type="text" placeholder="CIS Number" asp-for="CisNumber" name="CisNumber" id="CisNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group">
                                <select name="CisYear" class="form-control select2bs4" id="CisYear" asp-for="CisYear" asp-items="@Model.Years">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <label class="col-md-2 col-form-label">@localizer["Cnr No"]</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" placeholder="Cnr number" asp-for="CnrNumber" name="CnrNumber" id="CnrNumber" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Next Date"]</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="date" asp-for="NextDate" id="NextDate" placeholder="dd/MM/yyyy" class="form-control">
                            </div>
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">@localizer["Linked With"]</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <select class="form-control select2bs4" asp-for="LinkedCaseId" asp-items="@Model.LinkedBy">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <partial name="_AgainstCaseDetail" model="Model" />
                </div>
            </div>
            <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                <button type="submit" class="btn btn-success">Save</button>
                <a onclick="jQueryModalGet('/Litigation/casemanage/OnGetClientInfo?CaseId=@Model.Id','Add Client')" class="btn btn-outline-success" style="dis">
                    <i class="fa fa-plus-square"></i> Add Client
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="~/js/litigation/managecase.js"></script>
}



