@model IEnumerable<GetCaseViewModel>
<table id="tblUserCase" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th style="width:3%!important">Sno.</th>
            <th style="width:10%!important">Type</th>
            <th style="width:15%!important">Court Type</th>
            <th style="width:10%!important">Number</th>
            <th style="width:20%!important">Parties</th>
            <th style="width:5%!important">Court</th>
            <th style="width:5%!important">Stage</th>
            <th style="width:15%!important">Hearing Date</th>
            <th style="width:8%!important">Actions</th>           
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var bt in Model)
        {
            <tr>
                <td>
                    @(count = count + 1)
                </td>
                <td>
                    @bt.CaseTypeName
                </td>
                <td>
                    @bt.CourtType
                </td>
                <td>
                    @bt.CaseNumber
                </td>
                <td>
                    @string.Concat(bt.FirstTitle, " V/S ", bt.SecondTitle)
                </td>
                <td>
                    @bt.CourtName
                </td>
                <td>
                    @bt.CaseStage
                </td>
                @*  <td>
            @bt.Status
            </td> *@
                <td>
                    @bt.NextHearingDate
                </td>
                <td>
                    <a onclick="jQueryModalGet('/Litigation/casemanage/OnGetCaseHistory?CaseId=@bt.Id', 'See History')" class="fa fa-history" title="See History"></a>
                    <a onclick="jQueryModalGet('/Litigation/casemanage/GetFileUploadModel?CaseId=@bt.Id', 'Upload Document')" class="fa fa-file" title="Upload Document"></a>
                    <a asp-area="Litigation" asp-controller="casemanage" asp-action="GetCaseDetail" asp-route-id="@bt.Id" class="fa fa-eye" title="View Case Detail"></a>
                    @* <form id="form_delete_@bt.Id" asp-area="LawyerDiary" asp-controller="casestage" method="post" asp-action="OnPostDelete" asp-route-id="@bt.Id" onsubmit="return jQueryModalDelete(this)">
                        <a href="javascript:$('#form_delete_@bt.Id').submit();" class="fas fa-trash-alt"></a>
                    </form> *@
                </td>
               @*  @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Cases.Delete)).Result.Succeeded || (AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Edit)).Result.Succeeded)
                {
                    <td text-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu shadow animated--grow-in">
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Cases.Edit)).Result.Succeeded)
                                {
                                    <a onclick="jQueryModalGet('/LawyerDiary/casestage/OnGetCreateOrEdit?id=@bt.Id', 'Edit Brand')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>

                                }
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Cases.Delete)).Result.Succeeded)

                                {
                                    <form id="form_delete_@bt.Id" asp-area="LawyerDiary" asp-controller="casestage" method="post" asp-action="OnPostDelete" asp-route-id="@bt.Id" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@bt.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                    </form>
                                }
                            </div>
                        </div>
                    </td>
                } *@
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tblUserCase").DataTable();
    });
</script>