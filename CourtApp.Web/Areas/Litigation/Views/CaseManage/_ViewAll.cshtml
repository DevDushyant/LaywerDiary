@model IEnumerable<GetCaseInfoViewModel>
<table id="tblUserCase" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th style="width:5%!important">Sno.</th>
            <th style="width:15%!important">Court</th>
            <th style="width:15%!important">Type</th>
            <th style="width:37%!important">Case Detail</th>
            <th style="width:10%!important">Stage</th>
            <th style="width:13%!important">Next Date</th>
            <th style="width:5%!important">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var bt in Model)
        {
            <tr>
                <td>
                    @(count = count + 1)
                </td>
                <td>
                    @bt.Court
                </td>
                <td>
                    @bt.CaseType
                </td>
                <td>
                    @bt.CaseDetail
                </td>
                <td>
                    @bt.CaseStage
                </td>
                @*  <td>
            @bt.Status
            </td> *@
                <td>
                    @if (bt.NextDate != "01/01/0001")
                        @bt.NextDate
                </td>
                <td>
                    <a onclick="jQueryModalGet('/Litigation/casemanage/OnGetCaseHistory?CaseId=@bt.Id', 'See History')" class="fa fa-history" title="See History"></a>
                    <a onclick="jQueryModalGet('/Litigation/casemanage/GetFileUploadModel?CaseId=@bt.Id', 'Upload Document')" class="fa fa-file" title="Upload Document"></a>
                    <a asp-area="Litigation" asp-controller="casemanage" asp-action="GetCaseDetail" asp-route-id="@bt.Id" class="fa fa-eye" title="View Case Detail"></a>
                    @* <form id="form_delete_@bt.Id" asp-area="LawyerDiary" asp-controller="casestage" method="post" asp-action="OnPostDelete" asp-route-id="@bt.Id" onsubmit="return jQueryModalDelete(this)">
                <a href="javascript:$('#form_delete_@bt.Id').submit();" class="fas fa-trash-alt"></a>
                </form> *@
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tblUserCase").DataTable();
    });
</script>