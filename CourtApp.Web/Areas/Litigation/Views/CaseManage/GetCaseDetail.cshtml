@model CaseDetailInfoViewModel
<style>
    .div_hide {
        display: none
    }

    .text-capitalize {
        text-transform: capitalize;
    }
    fieldset.scheduler-border {
        border: 1px groove #ddd !important;
        padding: 0 1.4em 1.4em 1.4em !important;
        margin: 0 0 1.5em 0 !important;
        -webkit-box-shadow: 0px 0px 0px 0px #000;
        box-shadow: 0px 0px 0px 0px #000;
        width: 100% !important;
    }

    legend.scheduler-border {
        font-size: 1.2em !important;
        font-weight: bold !important;
        text-align: left !important;
        width: auto;
        padding: 0 10px;
        border-bottom: none;
    }
</style>
<div class="row">
    <div class="col-sm-6"><h4>Case <b>Detail Information</b></h4></div>
    <div class="col-sm-3 pull-right">
        @Html.ActionLink("Edit", "CreateOrUpdate", new { id = Model.Id })
    </div>
    <div class="col-sm-3">
        <button type="button" onclick="location.href='@Url.Action("index", "CaseManage")'" class="btn btn-info btn-style float-lg-right"><i class="fa fa-arrow-left"></i> Back to list</button>
    </div>
</div>

<fieldset class="scheduler-border">
    <legend class="scheduler-border">Case Infromation</legend>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstitutionDate)
        </dt>
