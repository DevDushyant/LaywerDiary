            @Html.DisplayNameFor(model => model.CourtType)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.CourtType)
        </dd>

        @if (!Model.IsHighCourt)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DistrictCourt)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.DistrictCourt)
            </dd>
        }
        else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourtBench)
            </dt>
            <dt class="col-sm-4">
                @Html.DisplayFor(model => model.CourtBench)
            </dt>
        }
    </dl>

    @if (!Model.IsHighCourt)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourtComplex)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.CourtComplex)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourtBench)
            </dt>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => model.CourtBench)
            </dd>
        </dl>
    }

    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseNoYear)
        </dt>
        <dd class="col-sm-4">
            @{
                string caseyear = (Model.CaseNo + "/" + Model.CaseYear);
            }
            @caseyear
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseCategory)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.CaseCategory)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseType)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.CaseType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CisNoYear)
        </dt>
        <dd class="col-sm-4">
            @{
                string cisno = (Model.CisNo + "/" + Model.CisYear);
            }
            @caseyear
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2 text-capitalize">
            @Html.DisplayNameFor(model => model.FirstTitle)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.FirstTitle)
        </dd>
        <dt class="col-sm-2 text-capitalize">
            @Html.DisplayNameFor(model => model.FirstTitleDetail)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.FirstTitleDetail)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2 text-capitalize">
            @Html.DisplayNameFor(model => model.SecondTitle)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.SecondTitle)
        </dd>
        <dt class="col-sm-2 text-capitalize">
            @Html.DisplayNameFor(model => model.SecondTitleDetail)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.SecondTitleDetail)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NextDate)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.NextDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseStage)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.CaseStage)
        </dd>
    </dl>
</fieldset>

