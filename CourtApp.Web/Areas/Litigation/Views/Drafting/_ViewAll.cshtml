@model IEnumerable<FormCaseMappingViewModel>
<table id="tblFormCaseMappingDt" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Sr.</th>
            <th>Title</th>
            <th>Template</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var bt in Model)
        {
            <tr>
                <td>
                    @(++count)
                </td>
                <td>
                    @bt.CaseTitle
                </td>
                <td>
                    @bt.TemplateName
                </td>
                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Books.Delete)).Result.Succeeded || (AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Edit)).Result.Succeeded)
                {
                    <td>
                        <a asp-area="Litigation" asp-controller="Drafting" asp-action="Petition" asp-route-id="@bt.Id">
                            <i class="fa fa-pencil-square-o"></i></a>
                        <a onclick="jQueryModalGet('/Litigation/drafting/Petition?id=@bt.Id','Edit Drafting Detail')"><i class="fas fa-pencil-alt"></i></a>
                        <a onclick="jQueryModalGet('/Litigation/drafting/OnGetCreateOrEdit?id=@bt.Id','View Drafting Detail')"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tblFormCaseMappingDt").DataTable();
    });
</script>