@model BringTodayCaseViewModel
<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="Hearing" method="post" asp-action="AssignWorkCase" class="d-inline" return=jQueryModalGet(this)>
            <div class="row">
                <div class="col-md-12">
                    <table id="tblTHearingCaseDetail" class="table table-striped" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sno.</th>
                                <th>Case Detail</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 0;
                            }
                            @for (int i = 0; i < Model.CaseList.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="@Model.CaseList[i].Id" />
                                        @(count = count + 1)
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.CaseList[i].CaseTitle" />
                                        @Model.CaseList[i].CaseTitle
                                    </td>
                                    <td>
                                        <a onclick="jQueryModalGet('/Litigation/casemanage/OnGetCaseHistory?CaseId=@Model.CaseList[i].Id', 'See History')" class="btn bg-success "> <i class="fa fa-history"></i>History</a>
                                        <a onclick="jQueryModalGet('/Litigation/casemanage/OnGetCaseProceeding?CaseId=@Model.CaseList[i].Id', 'Case Proceeding')" class="btn bg-success"> <i class="fa fa-plus-square"></i> Proceeding</a> 
                                        <a onclick="jQueryModalGet('/Litigation/hearing/AssignWorkCase?CaseId=@Model.CaseList[i].Id', 'Case Working')" class="btn bg-success"> <i class="fa fa-plus-square"></i> Work</a>
                                        @* <div class="form-check m-1">
                                    <input asp-for="@Model.CaseList[i].Selected" class="form-check-input" />
                                    </div> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#tblTHearingCaseDetail").DataTable(
            {
                "language": {
                    "emptyTable": "There are no hearing today!"
                }
            }
        );
    });
</script>
