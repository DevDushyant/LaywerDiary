@model IEnumerable<CaseViewModel>
<table id="brandTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Sno.</th>
            <th>Case Type</th>
            <th>Case No</th>
            <th>Case Year</th>
            <th>Parties</th>
            <th>Court</th>
            <th>Hearing Date</th>
            @* <th>Details</th>             *@
        </tr>
    </thead>
    <tbody>
        @{ 
            int count = 0;
        }
        @foreach (var bt in Model)
        {
        <tr>
            <td>
               @count++;
            </td>
            <td>
                @bt.CaseTypeName
            </td>
            <td>
                @bt.CaseNumber
            </td>
            <td>
                @bt.Year
            </td>
            <td>
                @string.Concat(bt.TitleFirst, " V/S ", bt.TitleSecond)
            </td>
            <td>
                @bt.CourtName
            </td>
            <td>
                @bt.NextDate
            </td>
            @* <td>
                <a onclick="jQueryModalGet('/LawyerDiary/casestage/OnGetCreateOrEdit?id=@bt.CaseUniqueId', 'Case Detail')"><i class="fas fa-eye"></i></a>
            </td> *@
            
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#brandTable").DataTable();
    });
</script>