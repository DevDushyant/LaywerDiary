@model CaseWorkingViewModel
<form id="create-form" method="post" method="post" asp-controller="CaseWork" asp-action="OnPostCreateOrEdit" asp-route-Id="@Model.CaseId" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Case Title"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select class="form-control select2bs4" id="CaseId" asp-for="CaseId" asp-items="@Model.CaseTitles">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="CaseId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Work"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select class="form-control select2bs4" id="WorkId" asp-for="WorkId" asp-items="@Model.Works">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="WorkId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Sub Work"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select class="form-control select2bs4" id="SubWorkId" asp-for="SubWorkId" >
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Working Date"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="date" asp-for="WorkingDate" value="@DateTime.Now.ToString("MM/dd/yyyy")" id="WorkingDate" placeholder="dd/MM/yyyy" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Remark"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" placeholder="Please enter remark if any" asp-for="Remark" id="Remark" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $("#CaseId").select2({
        placeholder: "Select a case",
        theme: "bootstrap4",
        escapeMarkup: function (m) {
            return m;
        }
    });
    $("#WorkId").select2({
        placeholder: "Select a work",
        theme: "bootstrap4",
        escapeMarkup: function (m) {
            return m;
        }
    });
    $("#SubWorkId").select2({
        placeholder: "Select a sub work",
        theme: "bootstrap4",
        escapeMarkup: function (m) {
            return m;
        }
    });
    $("#WorkId").on("change", function () {
        $("#SubWorkId").empty();
        $.getJSON("/Litigation/CaseWork/DdlSubWorks?WorkId=" + $("#WorkId").val(), function (data) {
            $.each(data.Data, function (i, item) {
                $("#SubWorkId").append(`<option /><option value="${item.Id}">${item.Name_En}</option>`);
            });
        });
    });   
</script>
