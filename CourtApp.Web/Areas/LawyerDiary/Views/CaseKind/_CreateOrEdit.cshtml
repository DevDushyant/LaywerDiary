@model CaseKindViewModel
<form id="create-form" method="post" asp-controller="CaseKind" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Court Type</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="CourtTypeId" class="form-control select2bs4" id="CourtTypeId" asp-for="CourtTypeId" placeholder="Select Court Type" asp-items="@Model.CourtTypes">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="CourtTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Case Kind</label>
                <div class="col-md-9">
                    <input type="text" asp-for="CaseKind" name="CaseKind" class="form-control">
                    <span asp-validation-for="CaseKind" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>