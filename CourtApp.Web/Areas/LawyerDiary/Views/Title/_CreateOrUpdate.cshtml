@model TitleViewModel
<form id="create-form" method="post" method="post" asp-controller="Title" asp-action="OnCreatOrUpdateTitle" asp-route-Id="@Model.Id" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Type"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select class="form-control select2bs4" asp-for="TypeId" asp-items="@Model.Types">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Case Detail"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select class="form-control select2bs4" asp-for="CaseId" asp-items="@Model.Cases">
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Complete Title"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <textarea class="form-control" placeholder="Please enter complete title and address" asp-for="Title"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        $("#TypeId").select2({
            placeholder: "Select a type",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#CaseId").select2({
            placeholder: "Select a case",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>