@model IEnumerable<TitleGetViewModel>
<table id="tblUserCase" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Sno.</th>
            <th>Type</th>
            <th>Case Info</th>
            <th>Title Detail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var bt in Model)
        {
            <tr>
                <td>
                    @(count = count + 1)
                </td>
                <td>
                    @bt.Type
                </td>
                <td>
                    @bt.CaseDetail
                </td>
                <td>
                    @bt.Title
                </td>
                <td>
                    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Delete)).Result.Succeeded || (AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Edit)).Result.Succeeded)
                    {
                    <td text-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu shadow animated--grow-in">
                                    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Edit)).Result.Succeeded)
                                    {
                                    <a onclick="jQueryModalGet('/LawyerDiary/title/OnCreatOrUpdateTitle?id=@bt.Id','Edit Title Detail')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>

                                    }
                                    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Delete)).Result.Succeeded)

                                    {
                                    <form id="form_delete_@bt.Id" asp-area="LawyerDiary" asp-controller="title" method="post" asp-action="OnTitleDelete" asp-route-id="@bt.Id" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@bt.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                    </form>
                                    }
                            </div>
                        </div>
                    </td>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tblUserCase").DataTable();
    });
</script>