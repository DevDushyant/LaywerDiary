@{
    ViewData["Title"] = localizer["Case Complete Title List"];
    ViewData["Caption"] = localizer["Case Complete Title"];
}
<div class="card">
    <div class="col-sm-12" style="padding:20px">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Titles.Create)).Result.Succeeded)
        {
            <a onclick="jQueryModalGet('/LawyerDiary/Title/OnCreatOrUpdateTitle','Add New Complete Title')" class="btn bg-success">
                <i class="fa fa-plus-square"></i> Add New Case Title
            </a>
            
        }
        <a id="reload" class="btn btn-primary text-white">
            <i class="fa fas fa-bolt"></i>
            Reload
        </a>
    </div>
    <div id="viewAll" class="card-body table-responsive">
    </div>
</div>
@section Scripts
{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#tblUserCase").DataTable();
            loadData();
            $('#reload').on('click', function () {
                loadData();
            });
        });
        function loadData() {
            $('#viewAll').load('/LawyerDiary/Title/LoadAll');
        }
    </script>
}