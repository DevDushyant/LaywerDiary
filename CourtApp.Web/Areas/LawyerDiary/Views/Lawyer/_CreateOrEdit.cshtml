@model LawyerUpsertViewModel
<style>
    .custom-file-input {
        opacity: 1 !important;
    }

    .input-group > .custom-file {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
    }
    .text-capitalize {
        text-transform: capitalize;
    }
</style>
<form id="create-form" method="post" asp-controller="Lawyer" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["First Name"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" asp-for="FirstName" class="form-control text-capitalize" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Last Name"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" asp-for="LastName" class="form-control text-capitalize" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Mobile"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" asp-for="Mobile" maxlength="10" class="form-control" />
                    </div>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Email"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="email" asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Enrollment"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" asp-for="EnrollNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="EnrollNumber" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Dob"]</label>
                <div class="col-md-4">                    
                    <div class="input-group">
                        <input type="date" asp-for="Dob" class="form-control">
                    </div>
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Gender"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <select class="form-control select2bs4"
                                asp-for="Gender" asp-items="@Model.Genders">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Related Person"]</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" asp-for="RelatedPerson" class="form-control text-capitalize" />
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Religon"] @* (<span style="color:red">*</span>) *@</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <select class="form-control select2bs4"
                                asp-for="Religion" asp-items="@Model.Relegions">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="Religion" class="text-danger"></span>
                </div>
                <label class="col-md-2 col-form-label">@localizer["Profile Picture"] (<span style="color:red">*</span>)</label>
                <div class="col-md-4">
                    <div class="input-group">
                        <input accept=".png,.jpg,.jpeg,.gif,.tif"
                               name="ProfileImgFile"
                               type="file" class="custom-file-input"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])"
                               id="customFile">
                    </div>
                    @* <span asp-validation-for="ProfileImgFile" class="text-danger"></span> *@
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Address"] (<span style="color:red">*</span>)</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <textarea asp-for="Address" placeholder="Address" class="form-control text-capitalize"></textarea>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>            
        </div>
        <div class="form-group row">
            <div class="col-md-3">
            </div>
        </div>
    </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        
        $("#Gender").select2({
            placeholder: "Select a gender",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#Religion").select2({
            placeholder: "Select a relegion",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
         
    });
    $('#profilePicture').click(function () { $('#customFile').trigger('click'); });
</script>

