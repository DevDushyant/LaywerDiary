@model LawyerUpsertViewModel
<form id="create-form" method="post" asp-controller="Lawyer" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["First Name"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="FirstName" class="form-control" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Middle Name"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="MiddleName" class="form-control" />
                    </div>                    
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Last Name"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="LastName" class="form-control" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Enrollment Number"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="EnrollNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="EnrollNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Mobile"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Mobile" class="form-control" />
                    </div>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">@localizer["Email"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>

</script>
