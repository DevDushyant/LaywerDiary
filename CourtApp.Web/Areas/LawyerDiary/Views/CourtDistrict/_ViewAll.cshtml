@model IEnumerable<CourtDistrictViewModel>
<table id="tblCourtDistrict" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Sr.</th>
            <th>State</th>
            @* <th>District</th> *@
            <th>Name</th>
            @* <th>Abbreviation</th> *@
            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Books.Delete)).Result.Succeeded
            || (AuthorizationService.AuthorizeAsync(User, Permissions.Books.Edit)).Result.Succeeded)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 0;
        }
        @foreach (var bt in Model)
        {
            <tr>
                <td>
                    @(++counter)
                </td>
                <td>
                    @bt.StateName
                </td>
                @* <td>
                    @bt.DistrictName
                </td> *@
                <td>
                    @bt.Name_En
                </td>
               @*  <td>
                    @bt.Abbreviation
                </td> *@
                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Books.Delete)).Result.Succeeded || (AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Edit)).Result.Succeeded)
                {
                    <td text-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu shadow animated--grow-in">
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Books.Edit)).Result.Succeeded)
                                {
                                    <a onclick="jQueryModalGet('/lawyerdiary/CourtDistrict/OnGetCreateOrEdit?id=@bt.Id','Edit Court District')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>

                                }
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Books.Delete)).Result.Succeeded)

                                {
                                    <form id="form_delete_@bt.Id" asp-area="LawyerDiary" asp-controller="CourtDistrict" method="post" asp-action="OnPostDelete" asp-route-id="@bt.Id" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@bt.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                    </form>
                                }
                            </div>
                        </div>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tblCourtDistrict").DataTable();
    });
</script>