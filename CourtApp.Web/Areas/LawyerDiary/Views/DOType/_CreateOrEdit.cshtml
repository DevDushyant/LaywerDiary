@model DOTypeViewModel
<form id="create-form" method="post" asp-controller="DOType" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Type"]</label>
                <div class="col-md-9">
                    <select class="form-control select2bs4" asp-for="TypeId" asp-items="@Model.Types"> 
                        <option></option>
                    </select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Name"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Name_En" class="form-control">
                    <span asp-validation-for="Name_En" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>

    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        @{
            string btnText = Model.Id != Guid.Empty ? "Update" : "Save";
        }
        <button type="submit" class="btn btn-success">@btnText</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
    $(document).ready(function () {
        $("#TypeId").select2({
            placeholder: "Select a type",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>