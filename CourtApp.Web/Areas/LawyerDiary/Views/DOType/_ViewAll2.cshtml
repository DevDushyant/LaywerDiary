<table id="tblDOType" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            @* <th>Sno.</th> *@
            <th>Type</th>
            <th>Name</th>
            @* @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Delete)).Result.Succeeded
            || (AuthorizationService.AuthorizeAsync(User, Permissions.Brands.Edit)).Result.Succeeded)
            {
                <th>Actions</th>
            } *@
        </tr>
    </thead>
</table>
<script>
    $(document).ready(function () {
        BindDataTable();
    });

    BindDataTable = function () {
        $("#tblDOType").DataTable(
            {
                ajax: {
                    url: "DOType/LoadAll",
                    type: "GET",
                },
                processing: true,
                serverSide: true,
                filter: true,
                columns: [                    
                    { data: "Type", name: "Type" },
                    { data: "Name_En", name: "Name_En" }                    
                ]
            }

        )
    }
</script>