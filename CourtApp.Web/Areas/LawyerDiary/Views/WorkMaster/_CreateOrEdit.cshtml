@model WorkMasterViewModel
<form id="create-form" method="post" asp-controller="WorkMaster" 
asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" 
onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
             <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Work(En)"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Work_En" name="Work_En" id="Work_En" class="form-control" />
                    </div>
                    <span asp-validation-for="Work_En" class="text-danger"></span>
                </div>
            </div>
            @* <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Abbreviation"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Abbreviation"  class="form-control" />
                    </div>
                    <span asp-validation-for="Abbreviation" class="text-danger"></span>
                </div>
            </div> *@

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Work(Hn)"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Work_Hn" name="Work_Hn" id="Work_Hn" class="form-control" />
                    </div>
                    <span asp-validation-for="Work_Hn" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>



    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>

