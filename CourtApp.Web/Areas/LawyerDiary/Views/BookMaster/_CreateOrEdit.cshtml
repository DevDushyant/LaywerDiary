@model BookMasterViewModel
<form id="create-form" method="post" asp-controller="BookMaster" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Book Type"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="BookTypeId" class="form-control select2bs4" id="BookTypeId" asp-for="BookTypeId" asp-items="@Model.BookTypes">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="BookTypeId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">Publisher</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="PublisherId" class="form-control select2bs4" id="PublisherId" asp-for="PublisherId" asp-items="@Model.Publishers">
                        </select>
                    </div>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">Year</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="number" asp-for="Year" name="Year" id="Rate" class="form-control" />
                    </div>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>



    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        $("#BookTypeId").select2({
            placeholder: "Select a book type",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>
