@model CourtTypeViewModel
<form id="create-form" method="post" asp-controller="CourtType" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Court type"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <input type="text" asp-for="CourtType" class="form-control">
                    <span asp-validation-for="CourtType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Code"] (<span style="color:red">*</span>)</label>
                <div class="col-md-9">
                    <input type="text" maxlength="4" asp-for="Abbreviation"class="form-control">
                    <span asp-validation-for="Abbreviation" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        @{
            string btnText = Model.Id != Guid.Empty ? "Update" : "Save";
        }
        <button type="submit" class="btn btn-success">@btnText</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>