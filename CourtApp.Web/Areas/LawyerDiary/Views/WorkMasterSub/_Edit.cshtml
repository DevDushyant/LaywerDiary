@model WorkMasterSubViewModel
<form id="create-form" method="post" asp-controller="WorkMasterSub" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Work Master"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select class="form-control select2bs4"  asp-for="WorkId" asp-items="@Model.WMasters">
                            <option></option>
                        </select>
                    </div>
                    <span asp-validation-for="WorkId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Name(En)"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Name_En" name="Name_En" id="Name_En" class="form-control" />
                    </div>
                    <span asp-validation-for="Name_En" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Abbreviation"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Abbreviation" class="form-control" />
                    </div>
                    <span asp-validation-for="Abbreviation" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Name(Hn)"]</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" asp-for="Name_Hn" name="Name_En" id="Name_Hn" class="form-control" />
                    </div>
                    <span asp-validation-for="Name_Hn" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>



    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
    $(document).ready(function () {
        $("#WorkId").select2({
            placeholder: "Select a type",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>

