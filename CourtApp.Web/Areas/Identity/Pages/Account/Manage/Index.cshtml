@page
@model IndexModel
@{
	ViewData["Title"] = "Manage Account Settings";
	ViewData["ActivePage"] = ManageNavPages.Index;
	// ViewData["Caption"] = "Manage Account Settings";
}
<style>
	fieldset {
		border: 1px solid #dee2e6;
		padding: 1.5rem;
		margin-bottom: 2rem;
		border-radius: 0.5rem;
	}

	legend {
		width: auto;
		padding: 0 10px;
		font-size: 1rem;
		font-weight: 600;
		color: #0d6efd; /* Bootstrap primary */
	}
</style>

<div class="row">
	<div class="col-md-12">
		<div class="card shadow border-0">
			<div class="card-header bg-light">
				<h6 class="mb-0 text-primary">@localizer["Manage Profile"]</h6>
			</div>
			<div class="card-body pt-3">
				<partial name="_StatusMessage" model="Model.StatusMessage" />

				<form id="profile-form" method="post" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<fieldset>
						<legend>@localizer["Personal Information"]</legend>
						<div class="row g-3">
							<div class="col-md-6">
								<label asp-for="Input.FirstName" class="form-label"></label>
								<input asp-for="Input.FirstName" class="form-control" />
								<span asp-validation-for="Input.FirstName" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.LastName" class="form-label"></label>
								<input asp-for="Input.LastName" class="form-control" />
								<span asp-validation-for="Input.LastName" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.Mobile" class="form-label"></label>
								<input asp-for="Input.Mobile" class="form-control" />
								<span asp-validation-for="Input.Mobile" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.PhoneNumber" class="form-label"></label>
								<input asp-for="Input.PhoneNumber" class="form-control" />
								<span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.DateOfBirth" class="form-label"></label>
								<input type="date" asp-for="Input.DateOfBirth" class="form-control" />								
								<span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.ProfilePicture" class="form-label d-block"></label>
								<div class="custom-file">
									<input type="file"
										   accept=".png,.jpg,.jpeg,.gif,.tif"
										   asp-for="Input.ProfilePicture"
										   class="custom-file-input"
										   id="customFile"
										   onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
									<label class="custom-file-label" for="customFile">@localizer["Choose file"]</label>
								</div>
								<span asp-validation-for="Input.ProfilePicture" class="text-danger small"></span>
							</div>



							<div class="col-md-6">
								<label asp-for="Input.DateOfJoining" class="form-label"></label>
								<input type="date" asp-for="Input.DateOfJoining" class="form-control" />
								<span asp-validation-for="Input.DateOfJoining" class="text-danger small"></span>
							</div>
						</div>
					</fieldset>

					<fieldset>
						<legend>@localizer["Professional Information"]</legend>
						<div class="row g-3">
							<div class="col-md-6">
								<label asp-for="Input.ProfInfo.EnrollmentNo" class="form-label"></label>
								<input asp-for="Input.ProfInfo.EnrollmentNo" class="form-control" />
								<span asp-validation-for="Input.ProfInfo.EnrollmentNo" class="text-danger small"></span>
							</div>
							<div class="col-md-6">
								<label asp-for="Input.ProfInfo.BarAssociationNumber" class="form-label"></label>
								<input asp-for="Input.ProfInfo.BarAssociationNumber" class="form-control" />
								<span asp-validation-for="Input.ProfInfo.BarAssociationNumber" class="text-danger small"></span>
							</div>
							<div class="col-md-6">
								<label asp-for="Input.ProfInfo.PracticeLicenseDate" class="form-label"></label>
								<input type="date" asp-for="Input.ProfInfo.PracticeLicenseDate" class="form-control" />
								<span asp-validation-for="Input.ProfInfo.PracticeLicenseDate" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.ProfInfo.PracticeSince" class="form-label"></label>
								<select class="form-control select2bs4" asp-for="Input.ProfInfo.PracticeSince"
										asp-items="Model.Years">
									<option value=""></option>
								</select>
								<span asp-validation-for="Input.ProfInfo.PracticeSince" class="text-danger small"></span>
							</div>

							<div class="col-md-6">
								<label asp-for="Input.ProfInfo.SpecializationId" class="form-label"></label>
								<select class="form-control select2bs4" asp-for="Input.ProfInfo.SpecializationId"
										asp-items="Model.Specializations">
									<option value=""></option>
								</select>
								<span asp-validation-for="Input.ProfInfo.SpecializationId" class="text-danger small"></span>
							</div>
						</div>
					</fieldset>

					<fieldset>
						<legend>@localizer["Work Information"]</legend>
						<div class="row g-3">
							<div class="col-md-12">
								<label asp-for="Input.WorkLocInfo.Address" class="form-label"></label>
								<textarea asp-for="Input.WorkLocInfo.Address" class="form-control"></textarea>
								<span asp-validation-for="Input.WorkLocInfo.Address" class="text-danger small"></span>
							</div>
						</div>
					</fieldset>

					<fieldset>
						<legend>@localizer["Address"]</legend>
						<div class="row g-3">
							<div class="col-md-12">
								<label asp-for="Input.AddressInfo.Address" class="form-label"></label>
								<textarea asp-for="Input.AddressInfo.Address" class="form-control" ></textarea>
								<span asp-validation-for="Input.AddressInfo.Address" class="text-danger small"></span>
							</div>
							<div class="col-md-6">
								<label asp-for="Input.AddressInfo.Landmark" class="form-label"></label>
								<input asp-for="Input.AddressInfo.Landmark" class="form-control" />
								<span asp-validation-for="Input.AddressInfo.Landmark" class="text-danger small"></span>
							</div>
						</div>
					</fieldset>

					<div class="mt-4">
						<button id="update-profile-button" type="submit" class="btn btn-success">
							<i class="fas fa-check me-1"></i> @localizer["Save"]
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>




